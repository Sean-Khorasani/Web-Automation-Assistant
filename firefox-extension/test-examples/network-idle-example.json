{
  "name": "Network Idle Wait Example",
  "description": "Example instruction demonstrating network idle detection",
  "url": "https://example.com",
  "steps": [
    {
      "action": "click",
      "selector": {
        "css": "button.load-data"
      }
    },
    {
      "action": "wait_for_condition",
      "condition": {
        "type": "network_idle",
        "idleTime": 2000
      },
      "timeout": 30000
    },
    {
      "action": "get_content",
      "selector": {
        "css": ".results-container"
      },
      "property": "textContent",
      "store_as": "results"
    }
  ],
  "variables": {
    "results": {
      "type": "string",
      "default": ""
    }
  },
  "created": "2025-01-08T12:00:00Z",
  "modified": "2025-01-08T12:00:00Z"
}